<%= form_with model: [ @automaker, @automaker.cars.build ] do |form| %>
    <p>
        <%= form.label :name %><br>
        <%= form.text_field :name %>
    </p>
    <p>
        <%= form.label :model_year %><br>
        <%= form.text_field :model_year %>
    </p>
    <p>
        <%= form.label :color %><br>
        <%= form.text_field :color %>
    </p>
    <p>
        <%= form.label :product_code %><br>
        <%= form.text_field :product_code %>
    </p>
    <p>
        <%= form.label :collection %><br>
        <%= form.select :collection_id, @collections.collect { |collection| [collection.name, collection.id] }, include_blank: true %>
    </p>
    <p>
        <%= form.label :brand %><br>
        <%= form.select :brand_id, @brands.collect { |brand| [brand.name, brand.id] }, include_blank: true %>
    </p>
    <p>
        <%= form.submit %>
    </p>
<% end %>